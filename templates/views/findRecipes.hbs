<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>InstaRecipe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>

<body>

    {{>navbar}}
    <div class="container my-5">
        <h2 class="text-center">Find Recipes</h2>
        <div class="row mt-4">
            {{#each recipesData}}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <!-- Recipe Title -->
                        <h5 class="card-title">{{this.title}}</h5>

                        <!-- Recipe Category -->
                        <p class="card-text text-muted">Category: <strong>{{this.category}}</strong></p>

                        <!-- Short Description or Ingredients Preview -->
                        <p class="card-text">
                            Ingredients: {{#each this.ingredients}}{{this}}, {{/each}}
                        </p>

                        <!-- Link to View Full Recipe -->
                        <a href="/findRecipe/{{this._id}}" class="btn btn-primary btn-sm">View Recipe</a>
                    </div> 
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    {{>footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>